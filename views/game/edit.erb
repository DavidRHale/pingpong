<div>
  <h1 class="page-title">Update Game:</h1>

  <form method="POST" action="/games/<%= @game.id %>">
    <label for="game-date">Date:</label>
    <input type="text" name="game_date" id="game-date" value="<%= @game.game_date %>"/>

    <label for="player1-name">Player 1 Name:</label>
    <input type="text" name="player1_name" id="player1" value="<%= @game.players[0].name %>"/>

    <label for="player2">Player 2 Name:</label>
    <input type="text" name="player2_name" id="player2-name" value="<%= @game.players[1].name %>"/>

    <label for="player1-score">Player 1 Score:</label>
    <input type="number" name="player1_score" id="player1-score"/>

    <label for="player2-score">Player 2 Score:</label>
    <input type="number" name="player2_score" id="player2-score"/>

    <button type="submit" class="button">Update Game</button>
  </form>
</div>