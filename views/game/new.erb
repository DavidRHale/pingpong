<div>
  <h1 class="page-title">Add Game</h1>

  <form method="POST" action="/games">
    <label for="game-date">Date:</label>
    <input type="text" name="game_date" id="game-date">

    <label for="player1-name">Player 1 Name:</label>
    <input type="text" name="player1_name" id="player1">

    <label for="player2">Player 2 Name:</label>
    <input type="text" name="player2_name" id="player2-name">

    <label for="player1-score">Player 1 Score:</label>
    <input type="number" name="player1_score" id="player1-score">

    <label for="player2-score">Player 2 Score:</label>
    <input type="number" name="player2_score" id="player2-score">

    <label for="tournament">Tournament:</label>
    <select name="tournament_id" id="tournament">
      <% @tournaments.each do |tournament| %>
        <option value="<%= tournament.id %>"><%= tournament.name %></option>
      <% end %>
    </select>

    <button type="submit">Add Game</button>
  </form>
</div>